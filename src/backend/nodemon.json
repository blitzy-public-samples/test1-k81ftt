{
  "watch": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/tests/**/*",
    "node_modules/**/*",
    "dist/**/*",
    "coverage/**/*"
  ],
  "ext": ".ts,.js,.json",
  "exec": "ts-node --files src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "events": {
    "start": "echo 'Development server started'",
    "restart": "echo 'Server restarted due to changes'"
  },
  "delay": "1500",
  "verbose": true,
  "legacyWatch": false
}